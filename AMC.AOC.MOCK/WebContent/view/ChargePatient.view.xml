<mvc:View controllerName="amc.aoc.controller.ChargePatient"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form">

	<semantic:FullscreenPage id="chargePatient"
		title="{i18n>chargePatientTitle}" showFooter="false" showNavButton="true"
		navButtonPress="onNavBack">
		<VBox class="sapUiSmallMargin" >
			<!-- <Button text="Click me"></Button> -->
			<f:SimpleForm id="SimpleFormDisplay354"
				maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
				title="Patient's Info" labelSpanL="3" labelSpanM="3" emptySpanL="4"
				emptySpanM="4" columnsL="1" columnsM="1">
				<f:content>
					<Label text="Name"/>
					<Text text="{patients>Name}" />
					<Label text="Surname" />
					<Text text="{patients>Surname}" />
					<Label text="Age" />
					<Text text="{patients>Age}" />
					<Label text="Gender" />
					<Text text="{= ${patients>Gender} === 'M' ? 'Male' : 'Female'}" />
					<Label text="Attending Physician" />
					<Text text="{patients>Physician}" />
					<Label text="Room" />
					<Text text="{patients>Room}" />
				</f:content>
			</f:SimpleForm>

		</VBox>

	</semantic:FullscreenPage>
</mvc:View>